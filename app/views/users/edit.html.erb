<!DOCTYPE html>
<html>
  <head>
  </head>
  <body>
    <div class="body">
      <div class="container">
        <p id="notice"><%= notice %></p>          
          <h2>User info</h2>          
          <div class="form-body">
            <%= form_for(@user) do |f| %>

              <% if @user.errors.any? %>
                <div class="error_explanation">
                  <h2><%= @user.errors.count %> error prohibited this obj from being saved:</h2>
                  <ul>
                    <% @user.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>


              <div class="field">
                <label for="user_name">Name</label>
                <%= f.text_field :name, autofocus: true %>
              </div>
              <div class="field">
                <label for="user_image">Image</label><br>
                  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
              </div>
              <div class="field">
                <label for="user_introduction">Introduction</label>
                <%= f.text_area :introduction %>
              </div>
              <div class="actions">
                <%= f.submit "Update User", class: "submit" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <footer>
      <div class='container'>
        <div class='row'>
          <div class='col-xs-3 col-xs-offset-9'>
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
<html>