
<h2>User info</h2>
<div class="book">
  <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
</div>
<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <td>
        <p class= "profile-name"><%= user.name %></p>
      </td>
    </tr>
    <tr>
      <th>introduction</th>
      <td>
        <p class= "profile-introduction"><%= user.introduction %></p>
      </td>
    </tr>
  </tbody>
</table>
<div class="row">
    <% if user.id == current_user.id %>
      <p><%= link_to "", edit_user_path(user), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_14394" %></p>
    <% end %>
</div>  

<h2>New book</h2>
<%= form_for(book) do |f| %>
  <div class="field row">
    <h4>Title</h4>
    <%= f.text_field :title, class: "col-xs-12" %>
  </div>
  <div class="field row">
    <h4>Opinion</h4>
    <%= f.text_area :body, class: "col-xs-12" %><br>
  </div>
  <div class="actions row">
    <%= f.submit 'Create Book', class:"col-xs-12 btn btn-primary" %>
  </div>
<% end %>