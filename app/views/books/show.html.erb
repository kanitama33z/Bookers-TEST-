<html>
	<head>
  </head>
  <body>
		<div class='body'>
			<div class="container">
				<p id="notice">
					<%= flash[:notice] %>
				</p>
				<div class="row">
					<div class="col-xs-3">
						<%= render 'books/list', book: @books, user: @user %>
					</div>
					<div class="col-xs-9">
						<h2>Book detail</h2>
						<table class="table">
							<tbody>
								<tr>
										<td>
											<%= link_to user_path(@users.id) do %>
												<%= attachment_image_tag @users, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %><br>
												<%= @users.name %>
											<% end %>
										</td>
										<td>
											<%= link_to book_path(@book.id) do %>
												<%= @book.title %>
											<% end %>
										</td>
										<td>
											<%= @book.body %>
										</td>
										<% if @book.user == current_user %>
										<td>
											<%= link_to "Edit", edit_book_path(@book.id), class: "btn-sm btn-success edit_book_23482" %>
										</td>
										<td>
											<%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" , class: "btn-sm btn-danger destroy_book_23482" %>
										</td>
									<% end %>
									</tr>
								</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
